<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:background="@drawable/round_corners"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <TextView
        android:id="@+id/tvOwnerName"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_width="695dp"
        android:layout_height="48dp"
        android:text="Vadim has "
        android:textSize="40dp"
        tools:layout_editor_absoluteY="11dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteX="-266dp" />

    <TextView
        android:id="@+id/tvOwnersCars"
        android:layout_width="688dp"
        android:layout_height="53dp"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Audi, Lada, Porsche"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvOwnerName"
        app:layout_constraintEnd_toEndOf="@+id/tvOwnerName"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="@+id/tvOwnerName"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>